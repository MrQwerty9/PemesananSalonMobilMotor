<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/light_grey"
        android:id="@+id/card_packages"
        android:layout_margin="5dp">


    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/iv_product"
            android:src="@color/dark_grey"
            tools:ignore="contentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="Name"
            android:maxLines="1"
            android:paddingVertical="3dp"
            android:paddingHorizontal="7dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            app:layout_constraintStart_toStartOf="@+id/iv_product"
            app:layout_constraintEnd_toEndOf="@+id/iv_product"
            app:layout_constraintHorizontal_bias="0" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            android:textSize="20sp"
            android:text="Rp100.000"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            app:layout_constraintTop_toTopOf="@+id/btn_cart"
            app:layout_constraintStart_toStartOf="@+id/iv_product"
            app:layout_constraintBottom_toBottomOf="@+id/btn_cart"
            app:layout_constraintHorizontal_bias="0" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cart"
            android:padding="8dp"
            android:src="@drawable/ic_outline_shopping_cart_24"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="@+id/iv_product"
            app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>